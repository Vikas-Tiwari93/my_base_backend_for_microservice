{
  "name": "codewise",
  "version": "1.0.0",
  "description": "backend",
  "main": "src/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "ts-node src/index.ts",
    "prepare": "husky",
    "checkupdates": "npm install -g npm-check-updates && npx npm-check-updates -u",
    "upgrade": "ncu -u && rm -rf node_modules package-lock.json &&npm install",
    "lockdep": "npx json -I -f package.json -e 'this.dependencies && Object.keys(this.dependencies).forEach(k => this.dependencies[k] = this.dependencies[k].replace(/^\\D*/, \"\"))'",
    "lockdevdep": "npx json -I -f package.json -e 'this.devDependencies && Object.keys(this.devDependencies).forEach(k => this.devDependencies[k] = this.devDependencies[k].replace(/^\\D*/, \"\"))'",
    "lockdependencies": "npm run lockdep && npm run lockdevdep ",
    "tscheck": "npx tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lintfix": "npx eslint . --ext .ts,.tsx --fix",
    "prettier": "npx prettier . --check",
    "prettierfix": "npx prettier . --write",
    "fixall": "npm run lintfix && npm run prettierfix "
  },
  "author": "vikas",
  "license": "ISC",
  "dependencies": {
    "@bull-board/api": "6.11.0",
    "@bull-board/express": "6.11.0",
    "@types/socket.io": "3.0.2",
    "bcrypt": "6.0.0",
    "body-parser": "2.2.0",
    "bull": "4.16.5",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dotenv": "17.0.1",
    "express": "5.1.0",
    "express-fileupload": "1.5.2",
    "express-joi-validation": "6.1.0",
    "express-rate-limit": "7.5.1",
    "firebase-admin": "13.4.0",
    "joi": "17.13.3",
    "jsonwebtoken": "9.0.2",
    "mongoose": "8.16.1",
    "nodemailer": "7.0.4",
    "otp-generator": "4.0.1",
    "pdf-parse": "1.1.1",
    "redis": "5.5.6",
    "request-ip": "3.3.0",
    "socket.io": "4.8.1",
    "swagger-ui-express": "5.0.1",
    "uuid": "11.1.0",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0"
  },
