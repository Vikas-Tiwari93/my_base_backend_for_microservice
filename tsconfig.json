{
  "compilerOptions": {
 "module": "CommonJS",   // This enables top-level await and modern module syntax
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
